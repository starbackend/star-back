	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-dependency-plugin</artifactId>
				<executions>
					<execution>
						<id>rpm-copy-webxml</id>
						<phase>prepare-package</phase>
						<goals>
							<goal>copy</goal>
						</goals>
						<configuration>
							<artifactItems>
								<artifactItem>
									<groupId>org.cwatch</groupId>
									<artifactId>cwatch-boot-rpm</artifactId>
									<version>0.0.4-SNAPSHOT</version>
									<type>xml</type>
									<classifier>webxml</classifier>
									<outputDirectory>${rpm.res.dir}/${rpm.adminweb.dir}/conf</outputDirectory>
									<destFileName>web.xml</destFileName>
								</artifactItem>
							</artifactItems>
						</configuration>
					</execution>
					<execution>
						<id>rpm-unpack-wars</id>
						<phase>prepare-package</phase>
						<goals>
							<goal>unpack</goal>
						</goals>
						<configuration>
							<artifactItems>
								<artifactItem>
									<groupId>org.apache.activemq</groupId>
									<artifactId>activemq-web-console</artifactId>
									<type>war</type>
									<outputDirectory>${rpm.res.dir}/${rpm.adminweb.dir}/webapps/activemq</outputDirectory>
								</artifactItem>
							</artifactItems>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>	 
	 
	<pluginRepositories>
		<pluginRepository>
			<id>cwatch-repo-releases</id>
			<releases>
				<enabled>true</enabled>
			</releases>
			<snapshots>
				<enabled>false</enabled>
			</snapshots>
			<url>https://cwatch.org/repo/releases</url>
		</pluginRepository>
		<pluginRepository>
			<id>cwatch-repo-snapshots</id>
			<releases>
				<enabled>false</enabled>
			</releases>
			<snapshots>
				<enabled>true</enabled>
			</snapshots>
			<url>https://cwatch.org/repo/libs-snapshot-local</url>
		</pluginRepository>
	</pluginRepositories>

	<distributionManagement>
		<repository>
			<id>cwatch-priv</id>
			<name>cwatch-priv-releases</name>
			<url>https://cwatch.org/repo/priv-release-local</url>
		</repository>
		<snapshotRepository>
			<id>cwatch-priv</id>
			<name>cwatch-priv-snapshots</name>
			<url>https://cwatch.org/repo/priv-snapshot-local</url>
		</snapshotRepository>
	</distributionManagement>

</project>